{
  "name": "codeaddslife.github.io",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "npm run build:kd && npm run build:css",
    "build:kd": "node site.js",
    "build:css": "node-sass --output-style compressed main.scss > main.css",
    "serve": "browser-sync start --no-notify -s . -f .",
    "start": "npm run build && parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:kd'",
    "watch:css": "onchange 'main.scss' -- npm run build:css",
    "watch:kd": "onchange '**/*.kd' -- npm run build:kd"
  },
  "devDependencies": {
    "globby": "^6.1.0",
    "gray-matter": "^2.1.1",
    "handlebar": "^1.0.0",
    "html-minifier": "^3.4.3",
    "js-yaml": "^3.8.3",
    "koara": "^0.14.0",
    "koara-html": "^0.14.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "pygments": "^0.2.1"
  }
}
